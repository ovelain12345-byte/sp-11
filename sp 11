#include <iostream>
using namespace std;
int menu;

int main() {
	setlocale(0, "");
	while (true) {
		cout << "[+] Программа - \"Геометрические фигуры\"\n\n[1] Линия\n[2] Выйти\n";
		cin >> menu;
		if (menu == 1) {
			system("cls");
			cout << "Тип линии: \n\n[1] Горизонтальная\n[2] Вертикальная\n";
			int line;
			cin >> line;
			system("cls");
			if (line == 1) {
				cout << "Сколько: ";
				int liner;
				cin >> liner;
				cout << "[ + ] Текстура линии: ";
				char texture;
				cin >> texture;
				while (liner > 0)
				{
					cout << texture;
					liner--;
				}
				return 0;
			}
			else if (line == 2) {
				cout << "Сколько: ";
				int liner;
				cin >> liner;
				cout << "[ + ] Текстура линии: ";
				char texture;
				cin >> texture;
				while (liner > 0)
				{
					cout << texture;
					cout << endl;
					liner--;
				}
				return 0;
			}
			else {
				return 0;
			}
		}
		else if (menu == 2) {
			return 0;
		}
		else {
			return 0;
		}
	}
}
